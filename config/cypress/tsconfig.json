{
  "compilerOptions": {
    "composite": true,
    "target": "es5",
    "lib": ["es5", "dom"],
    "sourceMap": true,
    "types": ["cypress", "node"],
    "esModuleInterop": true,

    "paths": {
      "@/*": ["../../src/*"],
      "$/*": ["../../api/*"],
      "#/*": ["../../app/*"]
    }
  },
  "include": ["../../src/**/*.cy.ts", "../../src/**/*.cy.tsx", "../../src/**/*"]
}
