{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "sourceMap": true,
    "types": ["cypress", "node"],
    "esModuleInterop": true,

    "paths": {
      "@/*": ["../../src/*"],
      "$/*": ["../../api/*"],
      "#/*": ["../../app/*"]
    }
  },
  "include": [
    "e2e/**/*.cy.ts",
    "e2e/**/*.cy.tsx",
    "support/**/*.ts",
    "support/**/*.tsx",
    "helpers/**/*.ts",
    "helpers/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
