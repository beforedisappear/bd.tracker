{
  "name": "bd.tracker",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "next dev",
    "dev:t": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "add-ui": "bun x shadcn@latest add",
    "storybook": "storybook dev -p 6006 -c ./config/storybook",
    "build-storybook": "storybook build -c ./config/storybook",
    "format": "bun x prettier -w .",
    "db:validate": "bun x prisma validate --schema ./config/prisma/schema.prisma",
    "db:seed": "bun x prisma db seed",
    "db:migrate": "bun x prisma migrate dev --schema ./config/prisma/schema.prisma --name",
    "db:reset": "bun x prisma migrate reset --schema ./config/prisma/schema.prisma --name",
    "docker:up": "docker compose -f ./config/docker/postgres/docker-compose.yml up -d",
    "docker:down": "docker compose -f ./config/docker/postgres/docker-compose.yml down",
    "prepare": "husky"
  },
  "prisma": {
    "seed": "tsx ./config/prisma/seed.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@prisma/client": "5.22.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@tanstack/react-query": "^5.59.20",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.447.0",
    "next": "^15.1.3",
    "next-themes": "^0.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.53.1",
    "server-only": "^0.0.1",
    "tailwind-merge": "^2.5.3",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-interactions": "^8.4.2",
    "@storybook/addon-onboarding": "^8.4.2",
    "@storybook/blocks": "^8.4.2",
    "@storybook/nextjs": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@svgr/webpack": "^8.1.0",
    "@tanstack/react-query-devtools": "^5.61.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8",
    "eslint-config-next": "15.1.3",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "storybook": "^8.4.2",
    "swagger-typescript-api": "^13.0.23",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
