{
  "name": "bd.tracker",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "next dev",
    "dev:t": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "bun x prettier \"**/*.{js,mjs,ts,tsx,json}\" -w --config ./config/prettier/.prettierrc --ignore-path ./config/prettier/.prettierignore",
    "test:unit": "jest --config ./config/jest/jest.config.ts",
    "test:e2e": "cypress open",
    "cypress:open": "cypress open",
    "ui:add": "bun x shadcn@latest add",
    "storybook": "storybook dev -p 6006 -c ./config/storybook",
    "build:storybook": "storybook build -c ./config/storybook",
    "db:format": "bun x prisma format --schema ./config/prisma/schema.prisma",
    "db:validate": "bun x prisma validate --schema ./config/prisma/schema.prisma",
    "db:seed": "bun x prisma db seed",
    "db:migrate": "bun x prisma migrate dev --schema ./config/prisma/schema.prisma --name",
    "db:reset": "bun x prisma migrate reset --schema ./config/prisma/schema.prisma",
    "docker:postgres:up": "docker compose -f ./config/docker/postgres/docker-compose.yml up -d",
    "docker:postgres:down": "docker compose -f ./config/docker/postgres/docker-compose.yml down",
    "prepare": "husky",
    "docker:redis:up": "docker compose -f ./config/docker/redis/docker-compose.yml up -d",
    "docker:redis:down": "docker compose -f ./config/docker/redis/docker-compose.yml down"
  },
  "prisma": {
    "seed": "tsx ./config/prisma/seed.ts"
  },
